<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - GameShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/GameShop.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm  navbar-light bg-white border-bottom box-shadow mb-3">

        <a style="margin-left: 20px; margin-right: 20px;" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Game Shop</a>

        <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="navbar">
            <ul class="navbar-nav flex-grow-1" style="justify-content: right">

                <li class="nav-item">
                    <a href="#" class="nav-link"> @await Component.InvokeAsync("CartSummary")</a>
                </li>
                <li style="margin-right: 20px;">
                    <partial name="_LoginPartial"/>
                </li>
            </ul>
        </div>
    </nav>
</header>

<div class="container-fluid" style="display: flex" >
    <div class="col-md-2" >
        <nav class="navbar navbar-expand-sm  navbar-light bg-white   mb-3">
            <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbar2" aria-expanded="false" aria-label="Toggle navigation">
                <span class="bi bi-chevron-bar-right"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="navbar2">
                <ul class="navbar-nav flex-grow-1 " style="display: block">
                    <li>
                        <h5><b>Platforms</b></h5>
                        
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-controller="Games" asp-action="GetByPlatform" asp-route-platform="Playstation5" >Playstation 5</a>
                    </li>

                    <li>
                        <a class="nav-link text-dark" asp-controller="Games" asp-action="GetByPlatform" asp-route-platform="Playstation4">Playstation 4</a>
                    </li>

                    <li>
                        <a class="nav-link text-dark" asp-controller="Games" asp-action="GetByPlatform" asp-route-platform="Playstation3">Playstation 3</a>
                    </li>

                    <li>
                        <a class="nav-link text-dark" asp-controller="Games" asp-action="GetByPlatform" asp-route-platform="XboxOne">Xbox One</a>
                    </li>

                    <li>
                        <a class="nav-link text-dark"asp-controller="Games" asp-action="GetByPlatform" asp-route-platform="PC" >PC</a>
                    </li>
                    <li>
                        
                    </li>
                    <li>
                        <h5><b>Game type</b></h5>
                        
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-controller="Games" asp-action="GetByType" asp-route-gameType="Strategy">Strategy</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-controller="Games" asp-action="GetByType" asp-route-gameType="Sandbox">Sandbox</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-controller="Games" asp-action="GetByType" asp-route-gameType="Multiplayer">Multiplayer</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-controller="Games" asp-action="GetByType" asp-route-gameType="RPG">RPG</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-controller="Games" asp-action="GetByType" asp-route-gameType="Simulation">Simulation</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-controller="Games" asp-action="GetByType" asp-route-gameType="Action">Action</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-controller="Games" asp-action="GetByType" asp-route-gameType="Survival">Survival</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-controller="Games" asp-action="GetByType" asp-route-gameType="Horror">Horror</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-controller="Games" asp-action="GetByType" asp-route-gameType="Sports">Sports</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <div role="main" class="col-md-10" >
        @RenderBody()
    </div>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2022 - GameShop 
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>