@model GameShop.Models.ShoppingCart

@{ 
    ViewData["Title"] = "Shopping cart summary";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="text-center">
            <h2>You shopping cart summary</h2>
        </div>

        <table class="table">
            <thead>
            <tr>
                <th>Selected amount</th>
                <th>Movie</th>
                <th>Price</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.CartService.Carts)
            {
                <tr>
                    <td class="align-middle">@item.Amount</td>
                    <td class="align-middle">@item.Game.Title</td>
                    <td class="align-middle">@item.Game.Price.ToString("c")</td>
                    <td class="align-middle">@((item.Amount*item.Game.Price).ToString("c"))</td>
                    <td class="align-middle">
                        <a class="text-danger" asp-controller="Orders" asp-action="RemoveItem"
                           asp-route-id="@item.Game.Id">
                            <i class="bi bi-bag-dash"></i>
                        </a>
                        |
                        <a class="text-success" asp-controller="Orders" asp-action="AddToCart"
                           asp-route-id="@item.Game.Id">
                            <i class="bi bi-bag-plus"></i>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
            <tfoot>
            <tr>
                <td colspan="2"></td>
                <td><b>Total:</b></td>
                <td>
                    @Model.Total.ToString("c")
                </td>
                <td></td>
            </tr>
            </tfoot>
        </table>

        <div class="text-center">
            <div class="btn-group">
               <a class="btn btn-danger" asp-controller="Orders" asp-action="CompleteOrder">Buy</a>
                <a class="btn btn-outline-success" asp-controller="Games" asp-action="Index">
                    Add more items
                </a>
            </div>
        </div>

    </div>
</div>

